<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackgroundimage"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="244dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/fullmobinderlogonb" />

        <Button
            android:id="@+id/gameAssistBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/roundbuttonstyle"
            android:text="Game Assist"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/findCardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/roundbuttonstyle"
            android:text="Find Card"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/myCollectionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/roundbuttonstyle"
            android:text="My Collection"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/myDecksBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/roundbuttonstyle"
            android:text="My Decks"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
</ScrollView>
